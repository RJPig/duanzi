<view class="container">
  <view class="list">
    <view class="listItem" wx:for="{{dzlist}}" wx:key="index" data-id="{{item.sid}}" data-uid="item.uid">
      <view class="itemHeader">
        <view class="headerimg">
          <image src="{{item.header}}"></image>
        </view>
        <view class="text">
          <view class="username">{{item.name}}</view>
          <view class="time">{{item.passtime}}</view>
        </view>
      </view>
      <view class="itemContent">
        <view class="itemtext">{{item.text}}</view>
        <video src="{{item.video}}"></video>
      </view>
      <view class="itemFooter">
        <view class="dz">
          <image src="../images/yes.png"></image>
          <text>{{item.up}}</text>
        </view>

        <view class="zf">
          <image src="../images/zf.png"></image>
          <text>{{item.down}}</text>

        </view>
        <view class="pl">
          <image src="../images/pl.png"></image>
          <text>{{item.comment}}</text>

        </view>
      </view>
    </view>
  </view>
</view>